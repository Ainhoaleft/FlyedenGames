<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcTienda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/MvcTienda.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/color.css" />
   

   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 cabecera">
            <div class="container-fluid">
               
                <img src="~/imagenes/logo.png" alt="logo" width="500" height="100">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>                       
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                       
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area=""
                               asp-controller="Carrito" asp-action="Index">Carrito</a>
                            </li>
                            
                              
                             @if (User.IsInRole("Usuario"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area=""
                                       asp-controller="MisDatos" asp-action="Edit">Mis datos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area=""
                                       asp-controller="MisPedidos" asp-action="Index">Mis pedidos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Escaparate" asp-action="Index">Escaparate</a>
                                </li>
                            }
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Escaparate" asp-action="Index">Escaparate</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area=""
                               asp-controller="Estados" asp-action="Index">Estados</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area=""
                               asp-controller="Categorias" asp-action="Index">Categorías</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area=""
                               asp-controller="Productos" asp-action="Index">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area=""
                               asp-controller="Clientes" asp-action="Index">Clientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area=""
                               asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area=""
                               asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                               
                            }
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted redes">
        <div class="container">
            &copy; 2023 - Flyeden Games - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="text-decoration: none;">Política de privacidad</a>
        </div>
        <div class="container" style="position: absolute; bottom: 0; right: 100px;">
            redes sociales
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
